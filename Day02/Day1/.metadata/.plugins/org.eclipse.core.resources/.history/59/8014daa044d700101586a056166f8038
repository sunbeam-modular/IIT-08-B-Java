package com.sunbeam;

public class Time {
	private int hrs; 
	private int mins; 
	private int secs; 
	public Time() {
		// TODO Auto-generated constructor stub
	}
	public Time(int hrs, int mins, int secs) {
		this.hrs = hrs;
		this.mins = mins;
		this.secs = secs;
	}
	public int getHrs() {
		return hrs;
	}
	public void setHrs(int hrs) throws InvalidTimeException {
		if(hrs < 0 || hrs > 24)
			throw new InvalidTimeException(); 
		this.hrs = hrs;
	}
	public int getMins() {
		return mins;
	}
	public void setMins(int mins) throws InvalidTimeException {
		this.mins = mins;
	}
	public int getSecs() {
		return secs;
	}
	public void setSecs(int secs) throws InvalidTimeException {
		this.secs = secs;
	}
	
	
}
